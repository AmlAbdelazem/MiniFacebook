                               }
                               else
                               { <option class="@item.RoleID"> @o.Name</option>}

                           }
                       </select>
                    </td>*@
                <td>
                    @*<select id="rolLstId">
                            @foreach (var o in ViewBag.roleArray)
                            {
                                @if (o.Id == item.RoleID)
                                {
                                    @if (o.Name == "Admin")
                                    {
                                        <option class="@item.RoleID" selected> Admin</option>
                                        <option class="@item.RoleID"> Member</option>
                                    }
