@model IEnumerable<Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div id="MySearch">

</div>

<div style="padding:20px;">
    <form asp-action="AddPost" data-ajax="true" data-ajax-method="Post" data-ajax-update="#posts" data-ajax-mode="replace" data-ajax-success="f()">
        <div class="input-group">
            <textarea name="PostBody" id="HomePost" class="form-control" aria-label="With textarea" placeholder="What's on your mind?" style="width:500px;height:100px"></textarea>
        </div><br>
        <input type="submit" style="width:200px;margin-left:500px;" value="Post" class="btn btn-primary" />
    </form>
</div>
<h2 style="margin-left:50px;">All Posts</h2>
<hr style="width:1300px;" />
<partial name="Posts" model="@Model" />

<div class="modal fade" id="likesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="opacity:8; width:500px; height:500px">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Likes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="likeData">
            </div>
            <button class="close" data-dismiss="modal" aria-label="Close">Close</button>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        function f() {
            this.reset;
            $('#HomePost').val("");
        }
    </script>
}