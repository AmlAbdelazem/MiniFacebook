@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@*<h2>@ViewData["Title"]</h2>*@
<div id="RegisterForm">
    @*<a asp-page="~/"><img src="~/images/logo-trial.png" width="40" height="40"></a>*@
    <h2>Create a new account.</h2>
    <h4>It's free and always will be.</h4>
    <div class="row">
        <div class="col-xs-12">
            <form asp-route-returnUrl="@Url.Action("Index", "User", new { area = "" })"  method="post" id="FormBodyR">
                <div asp-validation-summary="All" class="text-danger"></div>
                @*<span asp-validation-for="Input.UserName" class="text-danger"></span>*@

                <div class="form-group">
                    <input asp-for="Input.Email" class="col-xs-12 txtInput" placeholder="Email Address" />
                    <br />
                    <span asp-validation-for="Input.Email" class="text-danger col-xs-12"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="col-xs-12 txtInput" placeholder="Password" />
                    <br />
                    <span asp-validation-for="Input.Password" class="text-danger col-xs-12"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="col-xs-12 txtInput" placeholder="Confirm Password" />
                    <br />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger col-xs-12"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.FirstName" id="fName" class="col-xs-6 txtInput" placeholder="First Name" />

                    <input asp-for="Input.LastName" id="lName" class="col-xs-6 txtInput" placeholder="Surname" />
                    <br />
                    <span asp-validation-for="Input.FirstName" class="text-danger col-xs-12"></span>
                    <span asp-validation-for="Input.LastName" class="text-danger col-xs-12"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.PhoneNumber" class="col-xs-12 txtInput" placeholder="Mobile Number" />
                    <br />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger col-xs-12"></span>
                </div>
                <div class="form-group">
                    <label id="bdLbl" asp-for="Input.Birthdate" class="col-xs-3 lblBD">Birthday:</label>
                    <input asp-for="Input.Birthdate" class="col-xs-9 txtInput" />
                    <br />
                    <span asp-validation-for="Input.Birthdate" class="text-danger col-xs-12"></span>
                </div>
                <div class="form-group gDiv">
                    <label class="genderStyle"><input type="radio" asp-for="Input.Gender" checked="checked" value="true"> Female</label>
                    <label class="genderStyle"><input type="radio" asp-for="Input.Gender" value="false"> Male</label>
                    <span asp-validation-for="Input.Gender" class="text-danger col-xs-12"></span>
                </div>

                <button type="submit" id="SubBtnR" class="btn btn-success col-xs-12">Sign Up</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
